<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.android.fragments.feedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:background="@drawable/header_mix"
            android:orientation="vertical" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:paddingBottom="?attr/actionBarSize"
                android:orientation="vertical">

                <org.android.views.TextViewTypeFace
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/list_item_padding"
                    android:text="@string/phone_number"
                    app:fontName="isans" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/bg_white_radius"
                    android:maxLines="1"
                    android:padding="5dp" />

                <org.android.views.TextViewTypeFace
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/list_item_padding"
                    android:text="@string/message_text"
                    app:fontName="isans" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/bg_white_radius"
                    android:layoutDirection="rtl"
                    android:lines="5"
                    android:padding="5dp"
                    android:textDirection="rtl" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/mail"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.70"
                        android:background="@drawable/btn_green"
                        android:textColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <org.android.views.TextViewTypeFace
                                android:id="@+id/mail_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/send"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/fbutton_default_padding_left"
                                android:textColor="@android:color/white"
                                app:fontName="isans" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mail_fa"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@android:color/white" />


                        </LinearLayout>

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />


                    <RelativeLayout
                        android:id="@+id/call"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/btn_blue"
                        android:textColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <org.android.views.TextViewTypeFace
                                android:id="@+id/call_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/call"
                                android:visibility="gone"
                                android:layout_marginRight="@dimen/fbutton_default_padding_left"
                                app:fontName="isans" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/phone_fa"
                                android:layout_gravity="center"
                                android:textColor="@android:color/white" />


                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
